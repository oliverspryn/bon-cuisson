<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="100%">
<!-- Create an outward facing public variable which will pass data to the menu -->
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var data:*; //Yeah, the lastResult property of the CallResponder isn't strongly typed
		]]>
	</fx:Script>
	
<!-- Display the list of menu items -->
	<s:List id="list" width="90%" top="10" borderVisible="false" contentBackgroundAlpha="0"
			itemRenderer="renderers.FoodMenuRenderer" horizontalScrollPolicy="off">
		<s:layout>
			<s:VerticalLayout gap="45"/>
		</s:layout>
		
		<s:AsyncListView list="{data}"/>
	</s:List>
</s:Group>
