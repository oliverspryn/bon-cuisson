<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false" creationComplete="init(event)">
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
		//Format the price
			private function init(e:FlexEvent):void {
				price.text = priceFormatter.format(data.price);
				
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:CurrencyFormatter id="priceFormatter" currencySymbol="$" fractionalDigits="2" trailingZeros="true" useCurrencySymbol="true" useGrouping="true"/>
	</fx:Declarations>
	
	<s:Label id="title" text="{data.name}"/>
	<s:Label id="seperator" lineBreak="explicit" maxDisplayedLines="1" left="{title.width + 5}" right="{price.width + 5}" text="................................................................................................................................................................................................................................................."/>
	<s:Label backgroundAlpha="1" id="price" right="0" />
	
</s:ItemRenderer>
